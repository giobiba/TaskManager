@model TaskManager.Models.Project
<br />
@if (ViewBag.message != null)
{
    <div class="toast" role="alert" aria-live="assertive" aria-atomic="true" style=" opacity: 100%">
        <div class="toast-header">
            <strong class="mr-auto">Task Manager</strong>
            <small>1 sec ago</small>

        </div>
        <div class="toast-body">
            @ViewBag.message
        </div>
    </div>
}

@using (Html.BeginForm(actionName: "New", controllerName: "Projects"))
{
    @Html.HiddenFor(model => model.id_pr)

    <strong>@Html.Label("Title", "Titlu Proiect")</strong>
    <br />
    @Html.EditorFor(m => m.Title, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(m => m.Title, "", new
    {
        @class = "text-danger "
    })
    <br />
    <br />

    <strong>@Html.Label("Description", "Descriere proiect")</strong>
    <br />
    @Html.EditorFor(m => m.Description, new { htmlAttributes = new { @class = "form-control" } })
    <br />
    <br />

    <strong>@Html.Label("Date_St", "Data de inceput")</strong>
    <br />
    @Html.EditorFor(m => m.Date_St, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(m => m.Date_St, "", new
    {
        @class = "text-danger "
    })
    <br />
    <br />

    <strong>@Html.Label("Date_End", "Data de final")</strong>
    <br />
    @Html.EditorFor(m => m.Date_End, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(m => m.Date_End, "", new
   {
       @class = "text-danger "
   })

    if (ViewBag.HasIdTeam)
    {
        @Html.HiddenFor(model => model.id_team)
    }
    else
    {
        <br />
        @Html.DropDownListFor(m => m.id_team, new SelectList(Model.Teams, "Value", "Text"),
         "Selectati echipa", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.id_team, "Trebuie sa selectati o echipa", new { @class = "text-danger" })
        <br />
    }
    <br />

    <button class="button6" style="background-color: #24ebae;" type="submit">Adauga proiect</button>
}