<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Task Manager</title>


    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-dark fixed-top bg-dark">
        <div class="container">
            
            @Html.ActionLink("Task Management", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse" id="navbarSupportedContent">
                @if(User.IsInRole("Admin") )
                {
                    <ul class="nav navbar-nav mr-auto">
                        <li class="nav-item">@Html.ActionLink("Teams", "Index", "Teams",new { style= "padding:2px 10px;color: white;" })</li>
                        <li class="nav-item">@Html.ActionLink("Projects", "Index", "Projects", new { style = "padding:2px 10px; color: white;" })</li>
                        <li class="nav-item">@Html.ActionLink("Users", "Index", "Users", new { style = "padding:2px 10px; color: white;" })</li>

                    </ul>
                }
                else if ( User.IsInRole("Organizator") || User.IsInRole("User"))
                {
                    <ul class="nav navbar-nav mr-auto">
                        <li class="nav-item">@Html.ActionLink("Teams", "Index", "Teams", new { style = "padding:2px 10px; color: white;" })</li>
                        <li class="nav-item">@Html.ActionLink("Projects", "Index", "Projects", new { style = "padding:2px 10px; color: white;" })</li>
                    </ul>

                }


                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
