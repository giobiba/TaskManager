<h3>@ViewBag.message</h3>

<h1>@ViewBag.message</h1>

<div class="panel panel-default">
    <div class="panel-heading">@ViewBag.Task.Title</div>
    <div class="panel-body">
        Descriere task: <strong>@ViewBag.Task.Description</strong>
        <br />
        <span class="label label-success">Perioada: @ViewBag.Task.Date_St -@ViewBag.Task.Date_End </span>
        <br />
        <br />
        <span class="label label-success">Status: @ViewBag.Task.Status </span>
        <br />
        <h5>@ViewBag.User</h5>
        <br />
        <hr>
        <a class="btn btn-success pull-left"
           href="/Tasks/Edit/@ViewBag.Task.id_tsk">Modifica task</a>
        <a class="btn btn-success pull-left"
           href="/Tasks/AddUserToTask/@ViewBag.Task.id_tsk">Asigneaza utilizator</a>
        <form method="post" action="/Tasks/Delete/@ViewBag.Task.id_tsk">
            @Html.HttpMethodOverride(HttpVerbs.Delete)
            <button class="btn btn-danger pull-right" type="submit">
                Sterge
                task
            </button>
        </form>
    </div>
</div>
<br />
@if (!ViewBag.IsCompleted)
{
    foreach (var comm in ViewBag.Task.Comments)
    {
        <div class="container">
            <div class="row">
                <div class="col-md-2"></div>
                <div class="col-md-8">
                    <div>
                        <p>@comm.Content</p>
                    </div>
                    <div style="display: inline-block; float : left; margin-right: 15px">
                        <a class="glyphicon glyphicon-pencil"
                           href="/Comments/Edit/@comm.id_com"></a>
                    </div>
                    <div style="display: inline-block; float : left">
                        <form method="post" action="/Comments/Delete/@comm.id_com">
                            @Html.HttpMethodOverride(HttpVerbs.Delete)
                            <button class="glyphicon glyphicon-trash" style="border: none;
    background: transparent" type="submit"></button>
                        </form>
                    </div>
                    <div class="col-md-2"></div>
                </div>
            </div>
        </div>
        <hr />
    }
    <div class="container">
        <div class="row">
            <div class="col-md-2">
            </div>
            <div class="col-md-8">
                <span class="label label-success">Comentariu lasat de : @comm.User.UserName </span>
                <div>
                    <p>@comm.Content</p>
                </div>
                <div style="display: inline-block; float : left; margin-right: 15px">
                    <a class="glyphicon glyphicon-pencil"
                       href="/Comments/Edit/@comm.id_com"></a>
                </div>
                <div style="display: inline-block; float : left">
                    <form method="post" action="/Comments/Delete/@comm.id_com">
                        @Html.HttpMethodOverride(HttpVerbs.Delete)
                        <button class="glyphicon glyphicon-trash" style="border: none; background: transparent" type="submit"></button>
                <div class="panel">
                    <form method="post" action="/Comments/New">
                        <div class="panel-body">
                            <input type="hidden" name="id_tsk"
                                   value="@ViewBag.Task.id_tsk" />
                            <label>Continut comentariu</label>
                            <br />
                            <textarea class="form-control" name="Content"></textarea>
                            <br />
                            <button class="btn btn-success " type="submit">
                                Adauga
                                comentariu
                            </button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-md-2"></div>
        </div>
    </div>
}