
@{
    ViewBag.Title = "New";
}

<h2>Adaugare nou task</h2>

<form method="post" action="/Tasks/New">
    <label>Titlu task</label>
    <input type="text" name="Title" />
    <br />
    <label>Descriere Task</label>
    <input type="text" name="Description" />
    <br />

    <label>Data inceput</label>
    <input type="date" name="Date_St" />
    <br />
    <label>Data Sfarsit</label>
    <input type="date" name="Date_End" />
    <br />
    <label>Status</label>
    <input type="text" name="Status" />
    <br />

    <label> Selectati Proiectul </label>
    <select name="id_pr">
        @foreach (var project in ViewBag.Projects)
        {
            <option value="@project.id_pr">@project.Title</option>
        }
    </select>

    <br />
    <button type="submit">Adauga Task</button>

</form>

