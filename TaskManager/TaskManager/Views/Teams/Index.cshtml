<h1>Lista Echipe</h1>

@if (ViewBag.message != null)
{
    <div class="toast" role="alert" aria-live="assertive" aria-atomic="true" style=" opacity: 100%">
        <div class="toast-header">
            <strong class="mr-auto">Task Manager</strong>
            <small>1 sec ago</small>

        </div>
        <div class="toast-body">
            @ViewBag.message
        </div>
    </div>
}

<div class="d-flex p-2 bd-highlight flex-wrap" style="min-width=100%">
    @foreach (TaskManager.Models.Team team in ViewBag.Teams)
    {
        @Html.Partial("TeamInfo", team)
    }
</div>
<br />
<a class="button6" style="background-color:#24ebae" href="/Teams/New/">Adauga echipa</a>
