@model TaskManager.Models.Team
@using (Html.BeginForm(actionName: "Edit", controllerName: "Teams"))
{
    @Html.HttpMethodOverride(HttpVerbs.Put)

    @Html.Label("Name", "Nume Echipa")
    @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(m => m.Name, "Numele este obligatoriu", new
    {
        @class = "text-danger "
    })

    <button class="btn-success" type="submit"> Editeaza Echipa </button>
}