@model TaskManager.Models.Comment
<h2>Editare comentariu</h2>

<form method="post" action="/Comments/Edit/@Model.id_com">
    @Html.HttpMethodOverride(HttpVerbs.Put)
    @Html.HiddenFor(m => m.id_com)
    @Html.Label("Content", "Continut comentariu")
    <br />
    <br />
    @Html.EditorFor(m => m.Content, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(m => m.Content, "Orice comentariu trebuie sa aiba continut", new { @class = "text-danger " })

    <br /><br />
    <button class="btn btn-success" type="submit"> Editeaza comentariu</button>
</form>